<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#000"
    android:layout_height="match_parent"
    tools:context=".ResultadoLeido">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="#00FFFF"></TextView>



    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/tv_valor_leido"
        android:layout_width="match_parent"
        android:textColor="#FFFF00"
        android:gravity="center"
        android:foregroundGravity="center"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        tools:ignore="MissingConstraints"></TextView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lay_datos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp"
            android:background="#00FFFF"></TextView>


        <TextView
            android:id="@+id/tv_mensaje"
            android:text=""
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:foregroundGravity="center"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            tools:ignore="MissingConstraints"></TextView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#00FFFF"></TextView>


<ImageView
    android:id="@+id/imagen"
    android:layout_marginTop="08dp"
    android:layout_width="75dp"
    android:layout_height="75dp"
    android:src="@drawable/checj_transp"
    android:layout_gravity="center"
    android:foregroundGravity="center"></ImageView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/bt_inicial_lectura"
        android:padding="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver a Captura"></Button>


</androidx.appcompat.widget.LinearLayoutCompat>
